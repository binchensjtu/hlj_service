    private function invcode($length,$num=1) {
        $chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
        $j = 0;
        $code_arr = array();
        while($j<$num){
            $random = '';
            for ($i = 0; $i < $length; $i++) {
                $random .= $chars[ mt_rand(0, strlen($chars) - 1) ];
            }
            $code_arr[$j] = $random;
            $j++;
        }
        return $code_arr;
    }



