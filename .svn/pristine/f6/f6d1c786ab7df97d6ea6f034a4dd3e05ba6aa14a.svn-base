
#head {
    text-align: center;
}


img {max-width: 100%;}

.progress li {
    display: inline-block;

}

.progress li span {
    border-radius: 50%;
}


.help-block {
    display: block;
    top: 28px;
    position: relative;
    left: -8px;
}

label.error {
    background: #fcc;
    display: block;
    padding: 2px 5px;
    margin-left: 5px;
    border-radius: 5px;
    font-weight: bold;
}

input {
    width: 100%;
}

#email {

    border: 1px solid #ccc;
    padding: 2px;
    font-size: 1.2em;
    color: #444;
    width: 200px;

}
